<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_bg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_login"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textColor="@color/white"
         />

    <LinearLayout
        android:id="@+id/layRoomId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/img_bg_login"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_home"
                />

            <EditText
                android:id="@+id/editRoomId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/home_room_id_hint"
                android:maxLength="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvForgetPasswd"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layRoomId"
        android:layout_marginRight="24dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@color/colorTextPlaceholder" />

    <TextView
        android:id="@+id/tvJoin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/tvSetting"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/tv_blue"
        android:gravity="center"
        android:text="@string/home_join"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/tv_blue_border"
        android:gravity="center"
        android:text="@string/home_setting"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

</RelativeLayout>
